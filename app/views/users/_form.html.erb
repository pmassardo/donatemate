<% if @user.errors.any? %>
 <p>Oops - there were problems with your submission. Please fix the following:</p>
 <ul>
   <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_for @user do |f| %>

  <div>
   <%= f.label :email %> <br />
   <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :user_name %> <br />
    <%= f.text_field :user_name %>
  </div>

  <div>
    <%= f.label :first_name %> <br />
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name %> <br />
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :card_number %> <br />
    <%= f.text_field :card_number %>
  </div>

  <div>
    <%= f.label :expiry_month %> <br />
    <%= f.number_field :expiry_month %>
  </div>

  <div>
    <%= f.label :expiry_year %> <br />
    <%= f.number_field :expiry_year %>
  </div>

  <div>
    <%= f.label :CVV %> <br />
    <%= f.text_field :cvv %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
   <%= f.submit "Save" %>
  </div>

<% end %>
